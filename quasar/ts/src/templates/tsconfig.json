{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true, 
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "module": "esnext", 
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": { 
      "@/<%= pkg.name %>/*": ["src/*"],
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"]
    },
    "resolveJsonModule": true, 
    "sourceMap": true, 
    "strict": true, 
    "target": "es2018"
  },
  "exclude": ["/dist", ".quasar", "node_modules"]
}
